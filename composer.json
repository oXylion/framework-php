    "require-dev": {
        "twig/twig2": "2.0-dev",
        "phpunit/phpunit": "3.7.33",
        "nesbot/Carbon": "1.8.*"
    },


    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "autoload-dev": {
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.7"
        }
    }

