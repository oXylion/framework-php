{
    "type": "project",
    "name": "oxylion/framework-php",
    "description": "the PHP project Application framework.",
    "license": "MIT",
    "homepage": "https://github.com/oXylion/framework-php",
    "keywords": [ "framework", "codev", "project", "oxylion" ],
    "support": {
        "issues": "https://github.com/oxylion/cakephp/issues",
        "source": "https://github.com/cakephp/cakephp"
    },
    "authors": [
        {
