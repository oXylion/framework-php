    "require": {
        "php": ">=5.3.3",
        "ext-dom": "*",
        "ext-pdo": "*",
        "ext-spl": "*",
        "ext-json": "*",
        "symfony/yaml": "2.*",
        "twig/twig": "1.16.*"
